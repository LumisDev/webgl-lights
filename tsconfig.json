{
	"compilerOptions": {
		"outDir": "./dist",
		"noEmit": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": [
			"DOM",
			"DOM.AsyncIterable",
			"DOM.Iterable",
			"ES2023",
			"ES2023.Array",
			"ES2023.Collection"
		]
	},
	"include": ["src/shaders.d.ts", "src/**/*.ts", "src/images.d.ts"],
	"exclude": ["node_modules"]
}
