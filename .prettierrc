{
	"semi": false,
	"trailingComma": "none",
	"useTabs": true,
	"tabWidth": 4,
	"endOfLine": "lf",
	"singleQuote": true,
	"plugins": ["prettier-plugin-glsl", "prettier-plugin-packagejson"],
	"overrides": [
		{
			"files": ["*.vert", "*.frag"],
			"options": {
				"parser": "glsl-parser"
			}
		}
	]
}
